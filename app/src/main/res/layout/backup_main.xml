<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#EFFFE0"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!--#EFFFE0-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_margin="50px"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">


        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="373dp"
            android:layout_height="161dp"
            android:src="@drawable/akb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMenu"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="24dp"
            app:strokeColor="#918483"
            app:strokeWidth="2dp"
            app:cardBackgroundColor="#eddfdf"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageLogo">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="97dp"
                    android:layout_height="101dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/menu"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="208dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:text="Daftar Menu"
                    android:textSize="15pt"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.421"
                    app:layout_constraintStart_toEndOf="@+id/imageView2"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardQr"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="24dp"
            app:strokeColor="#918483"
            app:strokeWidth="2dp"
            app:cardBackgroundColor="#eddfdf"
            app:layout_constraintEnd_toEndOf="@+id/cardMenu"
            app:layout_constraintTop_toBottomOf="@+id/cardMenu"
            app:layout_constraintVertical_bias="0.105">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewQR"
                    android:layout_width="90dp"
                    android:layout_height="78dp"
                    android:layout_marginStart="24dp"
                    android:src="@drawable/qr"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.493" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="208dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:text="Scan QR"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
                    android:textSize="15pt"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.421"
                    app:layout_constraintStart_toEndOf="@+id/imageViewQR"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>